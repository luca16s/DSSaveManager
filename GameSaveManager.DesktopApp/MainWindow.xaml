<Window x:Class="GameSaveManager.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:properties="clr-namespace:GameSaveManager.DesktopApp.Properties"
        mc:Ignorable="d"
        Icon="resources/ico_black.png"
        SizeToContent="WidthAndHeight"
        MinWidth="500"
        ResizeMode="CanMinimize"
        Title="Game Save Manager"
        Style="{DynamicResource FundoJanela}">
    <Window.Resources>
        <properties:Settings x:Key="Settings" />
        <Style x:Key="FundoJanela" TargetType="{x:Type Window}">
            <Setter Property="Background" Value="#3F3F3F" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Source={StaticResource Settings}, Path=Default.DarkMode}" Value="false">
                    <Setter Property="Background" Value="#ffffff" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Image x:Key="AccountIcon"
               Height="96"
               Width="96"
               Stretch="UniformToFill"
               VerticalAlignment="Center"
               HorizontalAlignment="Center">
            <Image.Style>
                <Style TargetType="{x:Type Image}">
                    <Setter Property="Source" Value="resources/actions/account_white.png" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Source={StaticResource Settings}, Path=Default.DarkMode}" Value="false">
                            <Setter Property="Source" Value="resources/actions/account_black.png" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        <Image x:Key="GamesIcon"
               Height="96"
               Width="96"
               Stretch="UniformToFill"
               VerticalAlignment="Center"
               HorizontalAlignment="Center">
            <Image.Style>
                <Style TargetType="{x:Type Image}">
                    <Setter Property="Source" Value="resources/actions/game_white.png" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Source={StaticResource Settings}, Path=Default.DarkMode}" Value="false">
                            <Setter Property="Source" Value="resources/actions/game_black.png" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        <Image x:Key="SettingsIcon"
               Height="96"
               Width="96"
               Stretch="UniformToFill"
               VerticalAlignment="Center"
               HorizontalAlignment="Center">
            <Image.Style>
                <Style TargetType="{x:Type Image}">
                    <Setter Property="Source" Value="resources/actions/settings_white.png" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Source={StaticResource Settings}, Path=Default.DarkMode}" Value="false">
                            <Setter Property="Source" Value="resources/actions/settings_black.png" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        <Image x:Key="AboutIcon"
               Height="96"
               Width="96"
               Stretch="UniformToFill"
               VerticalAlignment="Center"
               HorizontalAlignment="Center">
            <Image.Style>
                <Style TargetType="{x:Type Image}">
                    <Setter Property="Source" Value="resources/actions/info_white.png" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Source={StaticResource Settings}, Path=Default.DarkMode}" Value="false">
                            <Setter Property="Source" Value="resources/actions/info_black.png" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        <Style x:Key="ButtonDesign" TargetType="Button">
            <Setter Property="Width" Value="96" />
            <Setter Property="Height" Value="96" />
            <Setter Property="Margin" Value="4, 4, 4, 0" />
        </Style>
        <ControlTemplate x:Key="DefaultButton" TargetType="Button">
            <Grid>
                <Rectangle x:Name="buttonBackground"
                           Fill="{TemplateBinding Background}"
                           Stroke="{TemplateBinding Foreground}"
                           StrokeThickness="0"
                           RadiusX="5"
                           RadiusY="5" />
                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center" />
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Fill"
                            TargetName="buttonBackground"
                            Value="lightblue" />
                    <Setter Property="Opacity"
                            TargetName="buttonBackground"
                            Value="0.2" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="false">
                    <Setter Property="Fill"
                            TargetName="buttonBackground"
                            Value="Transparent" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button
            Grid.Column="0"
            Grid.Row="0"
            Name="AccountButton"
            ToolTip="Conexão com serviço de Armazenamento Online."
            Click="AccountButton_Click"
            Template="{StaticResource DefaultButton}"
            Style="{DynamicResource ButtonDesign}">
            <DynamicResource ResourceKey="AccountIcon" />
        </Button>
        <Button
            Grid.Column="1"
            Grid.Row="0"
            Name="GamesButton"
            Click="OpenGamesListPage"
            ToolTip="Jogos Disponíveis."
            Template="{StaticResource DefaultButton}"
            Style="{DynamicResource ButtonDesign}">
            <DynamicResource ResourceKey="GamesIcon" />
        </Button>
        <Button
            Grid.Column="2"
            Grid.Row="0"
            Name="SettingsButton"
            Click="OpenSettingsPage"
            ToolTip="Configurações."
            Template="{StaticResource DefaultButton}"
            Style="{DynamicResource ButtonDesign}">
            <DynamicResource ResourceKey="SettingsIcon" />
        </Button>
        <Button
            Grid.Column="3"
            Grid.Row="0"
            Name="AboutButton"
            Click="OpenAboutPage"
            ToolTip="Informações."
            Template="{StaticResource DefaultButton}"
            Style="{DynamicResource ButtonDesign}">
            <DynamicResource ResourceKey="AboutIcon" />
        </Button>
        <Frame
            x:Name="MainFrame"
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            NavigationUIVisibility="Hidden"
            Margin="10, 10, 10, 10" />
    </Grid>
</Window>