<Page x:Class="GameSaveManager.View.Pages.AccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewModel="clr-namespace:GameSaveManager.View.ViewModel"
      xmlns:properties="clr-namespace:GameSaveManager.View.Properties"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AccountPage">
    <Page.Resources>
        <viewModel:AccountPageViewModel x:Key="accountVM"/>
        <Image x:Key="Dropbox"
               Source="/resources/dropbox.png"
               Height="46"
               Width="191"
               Stretch="Uniform"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"/>
        <Image x:Key="Google"
               Source="/resources/btn_google_signin_dark_normal.png"
               Height="46"
               Width="191"
               Stretch="UniformToFill"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"/>
        <properties:Settings x:Key="Settings"/>
    </Page.Resources>
    <Grid DataContext="{Binding Source={StaticResource accountVM}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Usuário: "
               Grid.Row="0"
               Grid.Column="0"/>
        <Label Content="E-Mail: "
               Grid.Row="1"
               Grid.Column="0"/>
        <Label Content="{Binding Source={StaticResource Settings}, Path=Default.Name}"
               Grid.Row="0"
               Grid.Column="1"
               HorizontalAlignment="Stretch"/>
        <Label Content="{Binding Source={StaticResource Settings}, Path=Default.Email}"
               Grid.Row="1"
               Grid.Column="1"
               HorizontalAlignment="Stretch"/>
        <Button x:Name="BtnConectar"
                Grid.Row="2"
                Grid.Column="0"
                Content="Conectar"
                Command="{Binding Path=ConnectCommand}">
        </Button>
        <Button x:Name="BtnDesconectar"
                Grid.Row="2"
                Grid.Column="1"
                Content="Desconectar"/>
    </Grid>
</Page>
